set clipboard=unnamed
set hlsearch
set ignorecase
set incsearch
set number
set relativenumber
set smartcase

" Add blank line like vim-unimpaired
nnoremap [<Space> O<Esc>
nnoremap ]<Space> o<Esc>

" Easier movement
nnoremap H ^
vnoremap H ^
nnoremap L $
vnoremap L $

"nnoremap j gj
"nnoremap k gk
"nnoremap gj j
"nnoremap gk k
