# TODO: Replace hub with `gh`

[user]
    name = Scott Berrevoets
    email = s.berrevoets@me.com
[init]
    defaultBranch = main
[push]
    default = current
[rebase]
    autosquash = true
    autoStash = true
[alias]
    a       = add
    aa      = add --all
    ap      = add -p
    b       = branch -vv
    bd      = branch -d
    bda     = !sh -c 'git branch | grep -vw "$(git main-branch)" | xargs git branch -D'
    c       = commit -v
    ca      = commit -v --amend --no-edit
    caa     = !sh -c 'git add --all && git ca'
    cb      = checkout -b
    cm      = !sh -c 'git checkout $(git main-branch)'
    co      = checkout
    cp      = cherry-pick
    d       = diff
    dc      = diff --cached
    email   = config user.email
    f       = commit --fixup=HEAD
    l       = pull
    lg      = log --graph --pretty=format:'%Cred%h%Creset  %Cgreen%<(15)%cr%Creset %C(bold blue)%<(17)%an%C(reset) %s%Creset%C(yellow)%d%Creset' -25
    llg     = log --graph
    m       = merge
    o       = !sh -c 'hub browse'
    p       = push
    pf      = push --force
    pr      = !sh -c 'git linear-amend && git submitpr'
    r       = root
    rc      = commit -C HEAD@{1}
    rb      = rebase
    rba     = rebase --abort
    rbc     = rebase --continue
    rbm     = !sh -c 'git rebase $(git main-branch)'
    rbmi    = !sh -c 'git rebase $(git main-branch) -i'
    rbs     = rebase --skip
    rh      = reset HEAD
    rhh     = reset HEAD --hard
    rhs     = reset HEAD --soft
    root    = !sh -c 'git rev-parse --show-toplevel'
    s       = status
    sh      = show
    st      = stash
    stp     = stash pop
    su      = submodule update --init --recursive
    us      = restore --staged
    wtc     = !sh -c 'git commit --allow-empty -m \""$(curl -s https://whatthecommit.com/index.txt)"\"'
[rerere]
    enabled = true
[advice]
    skippedCherryPicks = false
[core]
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore
[diff]
    algorithm = patience
    colorMoved = dimmed_zebra
    indentHeuristic = true
    submodule = diff
    tool = vimdiff
[diff "plist"]
    textconv = plutil -convert xml1 -o -
[interactive]
    diffFilter = diff-highlight
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[status]
    showUntrackedFiles = all
[mergetool "nvim"]
    cmd = nvim -c "normal\\ gg]c" -f \"$MERGED\"
    prompt = false
[mergetool]
    keepBackup = false
    trustExitCode = true
[merge]
    tool = nvim
    log = true
    stat = true
[pull]
    rebase = true
[url "https://github.com/"]
    insteadOf = git@github.com:
[log]
    date = local
[fetch]
    prune = true
[hub]
    protocol = https
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
