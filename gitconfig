[user]
    name = Scott Berrevoets
    email = s.berrevoets@me.com
[push]
    default = current
[rebase]
    autosquash = true
[alias]
    a       = add
    aa      = add --all
    ap      = add -p
    b       = branch -vv
    bda     = !sh -c 'git branch --merged | command grep -vE \"^(\\*|\\s*master\\s*$)\" | command xargs -n 1 git branch -d'
    c       = commit -v
    ca      = commit -v --amend --no-edit
    cb      = checkout -b
    cm      = checkout master
    co      = checkout
    cp      = cherry-pick
    d       = diff
    dc      = diff --cached
    email   = config user.email
    f       = commit --fixup=HEAD
    l       = pull
    lg      = log --graph
    m       = merge
    o       = !sh -c 'hub browse'
    p       = push
    pf      = push --force
    pr      = !sh -c 'hub pull-request -o'
    rb      = rebase
    rba     = rebase --abort
    rbc     = rebase --continue
    rbm     = rebase master
    rbmi    = rebase master -i
    rh      = reset HEAD
    rhh     = reset HEAD --hard
    rhs     = reset HEAD --soft
    s       = status
    sh      = show
    st      = stash
    stp     = stash pop
    su      = submodule update --init --recursive
    wtc     = !sh -c 'git commit -m \""$(curl -s http://whatthecommit.com/index.txt)"\"'
[rerere]
    enabled = true
[core]
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore
[diff]
    algorithm = patience
    colorMoved = dimmed_zebra
    indentHeuristic = true
    submodule = diff
    tool = vimdiff
[diff "plist"]
    textconv = plutil -convert xml1 -o -
[interactive]
    diffFilter = diff-highlight
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[status]
    showUntrackedFiles = all
[mergetool "vim"]
  cmd = vim -c "normal\\ gg]c" -f \"$MERGED\"
  prompt = false
[mergetool]
  keepBackup = false
  trustExitCode = true
[merge]
  tool = vim
  log = true
  stat = true
